<% if current_user.admin == true %>
  <div class="container-fluid container-padding py-4">
    <h3>Editar proveedor</h3>
    <%= simple_form_for @provider do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.association :categories, collection: Category.all.order(:name), multiple: true %>
      <%= f.input :schedule %>
      <%= f.input :photo, as: :file %>
      <%= f.submit 'Editar', class: "btn btn-primary" %>
    <% end %>
  </div>
<% else %>
  <p>No ten√©s permitido editar proveedores!</p>
  <%= link_to "Home", root_path %>
<% end %>
