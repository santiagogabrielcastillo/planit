<body class="bg-white">
  <div class="container-fluid container-padding homepage">
    <h4 class="ml-4 pl-2">SERVICIOS</h4>
    <div class="align-content-center d-flex flex-wrap justify-content-center text-center">
      <% @categories.each do |category| %>
        <div class="col-4 col-lg-1 mt-4 mx-3 px-2 category">
          <%= link_to category_path(category) do %>
            <% if category.id == @category.id %>
              <%= image_tag "#{category.name.downcase.gsub(" ", "-")}.png", class: "category-img category-active" %>
            <% else %>
              <%= image_tag "#{category.name.downcase.gsub(" ", "-")}.png", class: "category-img" %>
            <% end %>
          <% end %>
          <h6 class="mt-3"><%= category.name %></h6>
        </div>
      <% end %>
    </div>
    <div class="row mt-5">
      <% @category.providers.each do |provider| %>
        <div class="col-12 col-md-4">
          <div class="card mx-auto">
            <div class="card-container">
              <%= link_to provider_path(provider) do %>
                <% if provider.photo.attached? %>
                  <%= cl_image_tag(provider.photo.key) %>
                <% else %>
                  <%= image_tag 'https://images.unsplash.com/photo-1496412705862-e0088f16f791?ixid=MnwxMjA3fDB8MHxzZWFyY2h8NDh8fGZvb2R8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="card-img' %>
                <% end %>
                <h3 class="mb-0"><%= provider.name %></h3>
              <% end %>
              <p><%= provider.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</body>



