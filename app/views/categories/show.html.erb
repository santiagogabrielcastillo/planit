<div class="container-fluid container-padding">
  <div class="bg-white pt-4 px-3">
    <h2 class="mb-4">Proveedores de la categor√≠a: <%= @category.name %></h2>
    <div class="row">
      <% @category.providers.each do |provider| %>
        <div class="col-12 col-md-4">
          <div class="card mx-auto">
            <div class="card-container">
              <%= link_to provider_path(provider) do %>
                <% if provider.photo.attached? %>
                  <%= cl_image_tag(provider.photo.key) %>
                <% else %>
                  <%= image_tag 'https://images.unsplash.com/photo-1496412705862-e0088f16f791?ixid=MnwxMjA3fDB8MHxzZWFyY2h8NDh8fGZvb2R8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60" alt="card-img' %>
                <% end %>
                <h3 class="mb-0"><%= provider.name %></h3>
              <% end %>
              <p><%= provider.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


