<div class="container-fluid container-padding">
  <div class="bg-white p-4">
    <h3>Información personal</h3>
    <%= simple_form_for @user do |f| %>
      <%= f.input :name, label: "Nombre", disabled: true %>
      <%= f.input :email, label: "Email", disabled: true %>
      <%= f.input :phone, label: "Teléfono", disabled: true %>
    <% end %>
    <div class="d-flex justify-content-between w-50 align-items-center mt-4 mb-3">
      <h5 class="mb-0">Medios de pago guardados: </h5>
      <%= link_to new_user_credit_card_path(@user) do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
    <div class="row">
      <% @user.credit_cards.each do |cc| %>
        <div class="col-12 col-lg-8">
          <div class="d-flex justify-content-between align-items-center rounded shadow py-3">
            <i class="fas fa-credit-card pl-4"></i>
            <div class="px-2">
              <p class="mb-0">Número de la tarjeta: <%= cc.number %></p>
              <p class="mb-0">Nombre del titular: <%= cc.name %></p>
              <p class="mb-0">Vencimiento: <%= cc.expire %></p>
            </div>
            <div class="d-flex flex-column justify-content-center align-items-center pr-4">
              <%= link_to edit_user_credit_card_path(@user, cc) do %>
                <i class="fas fa-pen"></i>
              <% end %>
              <%= link_to user_credit_card_path(@user, cc), method: :delete, data: { confirm: "Estás seguro?" } do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
